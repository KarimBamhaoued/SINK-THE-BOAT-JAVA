<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>
	<display-name>Trabajo STGI</display-name>
	<description>Juego de hundir la flota STGI </description>
	<servlet>
		<servlet-name>login</servlet-name>
		<description> Servlet de login y registro </description>
		<servlet-class>login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>seleccion_partidas</servlet-name>
		<description> Servlet de seleccion de partidas </description>
		<servlet-class>seleccion_partidas</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>anyadir_partidas</servlet-name>
		<description> Servlet para crear una nueva partida </description>
		<servlet-class>anyadir_partidas</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<description> Servlet para desloguear </description>
		<servlet-class>logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>unirse_partida</servlet-name>
		<description> Servlet para unirse a una partida </description>
		<servlet-class>unirse_partida</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>tablero</servlet-name>
		<description> Servlet para crear el tablero </description>
		<servlet-class>tablero</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>cambiar_turno</servlet-name>
		<description> Servlet para cambiar de turno </description>
		<servlet-class>cambiar_turno</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>combate</servlet-name>
		<description> Servlet para atacar el tablero del oponente </description>
		<servlet-class>combate</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ataque</servlet-name>
		<description> Servlet que actualiza el tablero segun el ataque</description>
		<servlet-class>ataque</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ganador</servlet-name>
		<description> Servlet que indica el ganador de la partida</description>
		<servlet-class>ganador</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>perfil</servlet-name>
		<description> Servlet que muestra el perfil de usuario</description>
		<servlet-class>perfil</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>seleccion_partidas</servlet-name>
		<url-pattern>/seleccion_partidas</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>anyadir_partidas</servlet-name>
		<url-pattern>/anyadir_partidas</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>unirse_partida</servlet-name>
		<url-pattern>/unirse_partida</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>tablero</servlet-name>
		<url-pattern>/tablero</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>cambiar_turno</servlet-name>
		<url-pattern>/cambiar_turno</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>combate</servlet-name>
		<url-pattern>/combate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ataque</servlet-name>
		<url-pattern>/ataque</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ganador</servlet-name>
		<url-pattern>/ganador</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>perfil</servlet-name>
		<url-pattern>/perfil</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
    	<welcome-file>home.html</welcome-file>
    </welcome-file-list>
</web-app>

